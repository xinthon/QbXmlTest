<UserControl
    x:Class="Desktop.Views.Components.TableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Desktop.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <ScrollViewer Margin="0 0 10 0" Grid.Row="2" VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding MenuCollection}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="ListViewItem">
                            <Button
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                Width="Auto"
                                HorizontalContentAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{Binding Name}"
                                Command="{Binding NavigateCommand}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <DataGrid
            Grid.Column="1"
            AutoGenerateColumns="True"
            HorizontalScrollBarVisibility="Auto"
            ItemsSource="{Binding ItemCollection}" />
    </Grid>
</UserControl>